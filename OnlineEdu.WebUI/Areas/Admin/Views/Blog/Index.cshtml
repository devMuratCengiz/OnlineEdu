@model List<ResultBlogDto>
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Content</th>
        <th>Date</th>
        <th>Category</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr style="font-weight:bold;">
            <th>@count</th>
            <td> <img src="@item.ImageUrl" style="height:75px;width:75px" /> @item.Title</td>
            <td>@item.Content</td>
            <td>@item.Date.ToShortDateString()</td>
            <td>@item.BlogCategory.Name</td>
            <td>
                <button onclick="deleteItem(@item.Id)" class="btn btn-outline-danger">Delete</button>
                <a asp-action="Update" asp-controller="Blog" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-info">Update</a>
            </td>
        </tr>
    }
</table>
<br />
<a asp-action="Create" asp-controller="Blog" asp-area="Admin" class="btn btn-outline-primary">Add</a>

<script>

    function deleteItem(id){
        Swal.fire({
      title: "Are you sure?",
      text: "You won't be able to revert this!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, delete it!",
    }).then((result) => {

        var controllerName = "@ViewData["Title"]"
        window.location.href = "/Admin/"+controllerName+"/Delete/" + id;

    });
    }
</script>