@model List<ResultAboutDto>

@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-hover">
    <tr style="font-weight:bold;">
        <th>#</th>
        <th>Image 1</th>
        <th>Image 2</th>
        <th>Description</th>
        <th>Item 1</th>
        <th>Item 2</th>
        <th>Item 3</th>
        <th>Item 4</th>
    </tr>

    @foreach(var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl1" style="height:75px;width:75px" /></td>
            <td><img src="@item.ImageUrl2" style="height:75px;width:75px" /></td>
            <td>@item.Description</td>
            <td>@item.Item1</td>
            <td>@item.Item2</td>
            <td>@item.Item3</td>
            <td>@item.Item4</td>
            <td>
                <button onclick="deleteItem(@item.Id)" class="btn btn-outline-danger">Delete</button>
                <a asp-action="Update" asp-controller="About" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-info">Update</a>
            </td>
        </tr>
    }
</table>
<br />
<a asp-action="Create" asp-controller="About" asp-area="Admin" class="btn btn-outline-primary">Add</a>
<script>

    function deleteItem(id){
        Swal.fire({
      title: "Are you sure?",
      text: "You won't be able to revert this!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, delete it!",
    }).then((result) => {

        var controllerName = "@ViewData["Title"]"
        window.location.href = "/Admin/"+controllerName+"/Delete/" + id;

    });
    }
</script>