@model List<ResultSubscriberDto>
@{
    ViewData["Title"] = "Subscriber";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<table class="table table-hover">
    <tr style="font-weight:bold;">
        <th>#</th>
        <th>Email</th>
        <th>Is Active</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td> @item.Email</td>
            <td> @item.IsActive
           
            <td>
                <button onclick="deleteItem(@item.Id)" class="btn btn-outline-danger">Delete</button>
            </td>
        </tr>
    }
</table>
<br />


<script>

    function deleteItem(id){
        Swal.fire({
      title: "Are you sure?",
      text: "You won't be able to revert this!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, delete it!",
    }).then((result) => {

        var controllerName = "@ViewData["Title"]"
        window.location.href = "/Admin/"+controllerName+"/Delete/" + id;

    });
    }
</script>