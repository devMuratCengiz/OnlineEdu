@model List<ResultTeacherSocialDto>
@{
    ViewData["Title"] = "MySocialMedia";
    Layout = "~/Areas/Teacher/Views/TeacherLayout/Index.cshtml";
    int count = 0;
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Social Media</th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr style="font-weight:bold;">
                <th>@count</th>
                <td><a href="@item.Url" target="_blank"></a> <i class="@item.Icon"></i> @item.Name</td>
                <td>
                    <button onclick="deleteItem(@item.Id)" class="btn btn-outline-danger">Delete</button>
                    <a asp-action="Update" asp-controller="MySocialMedia" asp-area="Teacher" asp-route-id="@item.Id" class="btn btn-outline-info">Update</a>
                </td>
            </tr>
        }
</table>
    </tbody>
    
<br />
<a asp-action="Create" asp-controller="MySocialMedia" asp-area="Teacher" class="btn btn-outline-primary">Add</a>

<script>

    function deleteItem(id){
        Swal.fire({
      title: "Are you sure?",
      text: "You won't be able to revert this!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, delete it!",
    }).then((result) => {

        var controllerName = "@ViewData["Title"]"
        window.location.href = "/Teacher/"+controllerName+"/Delete/" + id;

    });
    }
</script>

