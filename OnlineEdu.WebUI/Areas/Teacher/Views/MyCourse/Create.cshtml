@model CreateCourseDto
@{
    ViewData["Title"] = "Create Course";
    Layout = "~/Areas/Teacher/Views/TeacherLayout/Index.cshtml";
}

<form method="post">
    <label>Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />

    <label>Image</label>
    <input type="text" asp-for="Image" class="form-control" />
    <br />

    <label>Category</label>
    <select asp-items="@ViewBag.categories" asp-for="CourseCategoryId" class="form-control">
        <option>Categories</option>
    </select>
    <br />

    <label>Price</label>
    <input type="number" asp-for="Price" class="form-control" />
    <br />

    <button class="btn btn-outline-primary">Save</button>
</form>

